.cartControlRemove-enter
  opacity 0
  transform translate3d(48px,0,0) rotate(0deg)
.cartControlRemove-enter-active
  transition 1s all
.cartControlRemove-enter-to
  opacity 1
  transform translate3d(0,0,0) rotate(-720deg)

.cartControlRemove-leave
  opacity 1
  transform translate3d(0,0,0) rotate(-720deg)
.cartControlRemove-leave-active
  transition 1s all
.cartControlRemove-leave-to
  opacity 0
  transform translate3d(48px,0,0) rotate(0deg)





.mask-enter
  opacity 0
.mask-enter-active
  transition 1s opacity
.mask-enter-to
  opacity 1

.mask-leave
  opacity 1
.mask-leave-active
  transition 1s opacity
.mask-leave-to
  opacity 0